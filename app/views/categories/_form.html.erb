<div class="form-horizontal">
<%= form_for(@category) do |f| %>


  <%= render "share/error_message", :target => @category %>


    <div class="control-group">
      <%= f.label :name,"产品名",:class=>"control-label" %>

      <div class="controls">
        <%= f.text_field :name,:placeholder=>"产品名" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name,"产品图片",:class=>"control-label" %>
      <div class="controls">
        <%= image_tag(@category.imgurl_url(:thumb_medium)) if !@category.imgurl.blank?%>
        <%= f.file_field :imgurl %>
        <%= f.hidden_field :imgurl_cache %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "保存",:class=>"btn btn-primary" %>
      </div>
    </div>
<% end %>
</div>