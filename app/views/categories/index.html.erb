<div class="page-header">
  <h3>产品清单</h3>

</div>
<%= render "share/notice_message", :target => notice %>

<div>
  <div align="right">
    <%= link_to new_category_path, :class=>"btn btn-success btn-large" do%>
     <i class="icon-plus"></i>添加
    <% end %>

  </div>
    <% if @categories.blank?%>
     <blockquote>
       <p>还没有数据，赶紧去添加吧.</p>
     </blockquote>
    <% else %>

      <table class="table table-bordered">
        <thead>
        <tr>
          <th>编号</th>
          <th>产品名</th>
          <th>创建日期</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
          <%= render @categories,:locals => {:i=>0} %>
        </tbody>
      </table>
 <% end %>
</div>

