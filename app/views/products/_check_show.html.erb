<div class="form-horizontal">
  <form action="/products/after_check" method="post" data-remote="true">
  <input value="<%= target.id %>" name="p_id" type="hidden">
  <div class="control-group">
    <label class="control-label" for="number">商品编号</label>
    <div class="controls">
      <span class="input-xlarge uneditable-input"><%= target.number %></span>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="name">商品</label>
    <div class="controls">
      <div class="thumbnail">
        <%= image_tag(img_url(target.img_url)) %>
        <div class="caption">
          <h3><%= target.name %></h3>
          <p><%= target.summary || "没有填写商品简介"%></p>
        </div>
      </div>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="number">库存数量</label>
    <div class="controls">
      <input name="sum" class="span2" value="<%= target.stock_quantity%>">
    </div>
  </div>

  <input type="submit" value="保存" class="btn btn-success">

  </form>

</div>