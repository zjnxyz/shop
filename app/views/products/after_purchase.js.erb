<% if @product.errors.empty? %>
   $("#purchase").html('<p>进货成功<button type="button" class="close" data-dismiss="modal" aria-hidden="true">单击此处关闭窗口</button></p>')
   $("#search").html("<%=j render @products,:locals => {:i=>0,:lay=>4} %>")
   $("#page").html("<%=j paginate @products %>")
<% else %>
   $("#purchase").html('<%=j render "share/error_message", :target => @staff %>')
<% end %>