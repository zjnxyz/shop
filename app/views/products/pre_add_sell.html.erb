<div class="page-header">
  <h3>增加销售单</h3>
</div>  
<div class="form-horizontal" >
  <%= form_tag({:controller =>"sells",:action =>"create"},:id=>"form_validator") do %>
            <%= hidden_field_tag(:p_id, @product.id) %>

              <div class="control-group">
                 <label class="control-label" for="inputEmail">商品编号</label>
                 <div class="controls">
                   <span class="input-xlarge uneditable-input"><%= @product.number%></span>
                 </div>
                </div>
                
                <div class="control-group">
                 <label class="control-label" for="inputEmail">商品名</label>
                 <div class="controls">
                   <div class="thumbnail">
                     <%= image_tag(img_url(@product.img_url_url(:thumb_medium))) %>
                     <div class="caption">
                       <h3><%=@product.name %></h3>
                     </div>
                   </div>
                 </div>
                </div>

                <div class="control-group">
                 <label class="control-label" for="inputEmail">数量</label>
                 <div class="controls">
                   <input type="number" name="num" class="input-xlarge" min="1" value="1">
                 </div>
                </div>
                
                
                 <div class="control-group">
                 <label class="control-label" for="inputEmail">会员编号</label>
                 <div class="controls">
                   <input name="user_id" id="uid" class="span3 validate[required,custom[number]]">
                   <span id="getUser" class="btn btn-success">查询</span>
                 </div>
                </div>
                <div id="user1">

                </div>
                 <div class="control-group">
                 <label class="control-label" for="inputEmail">预售价</label>
                 <div class="controls">
                    <div class="input-prepend input-append">
                     <span class="add-on">￥</span>
                     <input class="span2 validate[required,custom[number]]" name="sell_price"  type="text" value="<%=@product.sell_price %>">
                    <span class="add-on">.00</span>
                  </div>
                 </div>
                </div>
                
                <div class="control-group">
                 <label class="control-label" for="inputEmail">店面折扣</label>
                 <div class="controls">
                 	<input name="real_discount" class="span3 validate[required,custom[number]]" value="<%= @product.discount%>">
                 </div>
                </div>
                
                <div class="control-group">
                 <label class="control-label" for="inputEmail">是否为三下乡产品</label>
                 <div class="controls">
                  <span class="input-xlarge uneditable-input"><%= product_is_rural_areas(@product.is_rural_areas)%></span>
                 </div>
                </div>
                <div id="user2">
                </div>
                
 
               <div class="control-group">
                <div class="controls">
                 <button type="submit" class="btn btn-primary">提交</button>
                </div>
              </div>
  <% end %>
</div>
<script type="text/javascript">

</script>