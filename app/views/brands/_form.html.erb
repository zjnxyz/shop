<div class="form-horizontal">
<%= form_for(@brand,:html=>{:id=>"form_validator"}) do |f| %>
  <%= render "share/error_message", :target => @brand %>

    <div class="control-group">
      <%= f.label :name,"品牌名",:class=>"control-label" %>

      <div class="controls">
        <%= f.text_field :name,:placeholder=>"品牌名", :class=>"validate[required]"%>
      </div>
    </div>

    <div class="control-group">
        <%= f.label :name,"商标",:class=>"control-label" %>
        <div class="controls">
          <%= image_tag(@brand.imgurl_url(:thumb_medium)) if @brand.imgurl.blank?%>
          <%= f.file_field :imgurl %>
          <%= f.hidden_field :imgurl_cache %>
        </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "保存",:class=>"btn btn-primary" %>
      </div>
    </div>
<% end %>
</div>