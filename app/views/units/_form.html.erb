<div class="form-horizontal">

<%= form_for(@unit,:html=>{:id=>"form_validator"}) do |f| %>
  
  <%= render "share/error_message", :target => @unit %>


    <div class="control-group">
      <label class="control-label" for="inputEmail">单位名</label>
      <div class="controls">
        <%= f.text_field :name,:placeholder=>"单位名",:class=>"validate[required] " %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "保存",:class=>"btn btn-primary" %>
      </div>
    </div>

<% end %>


</div>

