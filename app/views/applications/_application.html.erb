      <tr class="warning">
        <%= render "applications/application_one", :target =>application %>
      </tr>
  <% else %>
      <tr class="info">
        <%= render "applications/application_one", :target =>application %>
      </tr>
  <% end %>
  <% locals[:i]+=1 %>
  
<% end %>