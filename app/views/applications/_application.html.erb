      <tr class="warning">
        <%= render "applications/index_user", :target =>application %>
      </tr>
  <% else %>
      <tr class="info">
        <%= render "applications/index_user", :target =>application %>
      </tr>
  <% end %>
  <% locals[:i]+=1 %>
